<div>
  <h2> List of Users </h2>
  <table class="table table-striped table-hover ">
    <thead>
      <tr class="info">
        <th> First Name </th>
        <th> Last Name </th>
        <th> Username</th>
        <th> Date_Of_Birth </th>
        <th> Email </th>
        <th> Profile Picture </th>
        <th> Delete </th>
        <th> Click to Block </th>
      </tr>
    </thead>
    <tbody>
        <% @user.each do |e| %>
          <% if e.admin? %>
          <% else %>
            <tr>
              <td> <%=link_to e.first_name, dashboard_admin_show_path(e) %> </td>
              <td> <%= e.last_name %> </td>
              <td> <%= e.username %> </td>
              <td> <%= e.dob %> </td>
              <td> <%= e.email %> </td>
              <td> <%= image_tag e.profile_picture.url, :width =>50 %> </td>
              <td> <%= link_to "Delete",dashboard_delete_path(e), method: :delete, data: { confirm:'are u sure?' } %></td>
              <td> <%= link_to "Block",dashboard_blocked_path(e) %> </td>
            </tr>
          <% end %>
      <% end %>
    </tbody>
  </table>
</div>
