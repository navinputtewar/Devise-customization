<!DOCTYPE html>
<html>
  <head>
    <title>Devise-Customization</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <nav class="navbar navbar-default">
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active">
            <a href="/">Home</a>
          </li>
          <li>
            <%= link_to "About", dashboard_about_path %>
          </li>
        </ul>
        <p class="navbar-text pull-left">
          <% if user_signed_in? %>
            Logged in as
            <strong><font color="white"><%= link_to current_user.username, dashboard_show_path %></font></strong>
             <div class="special-img">
               <img src="<%=current_user.profile_picture.url%>" class="img-circle special-img">
             </div>
        </p>
        <p class="navbar-text pull-right">
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Sign_out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
          <% else %>
            <%= link_to "Register", new_user_registration_path, :class => 'navbar-link'  %> |
            <%= link_to "Sign_in", new_user_session_path, :class => 'navbar-link'  %>
          <% end %>
        </p>
      </div>
    </nav>
  </head>
    <body>
      <div>
        <%= render 'layouts/messages' %>
        <%= yield %> 
      </div>
    </body>
</html>
